<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
       default-init-method = "init" >

    <bean id = "person" class = "Person">
        <property name = "name" value = "Iurii"/>
        <property name = "age" value="26"/>
    </bean>

    <bean id = "app" class = "App">
        <constructor-arg ref = "client" />
        <constructor-arg ref="consoleLogger"/>
    </bean>

    <bean id="client" class = "Client" >
        <constructor-arg index = "0" value = "1" />
        <constructor-arg index = "1" value = "Iurii Ivanov" />
    </bean>

    <bean id="consoleLogger" class="utils.ConsoleEventLogger"/>

    <bean id="fileLogger" class="utils.FileEventLogger" init-method="init"/>

    <bean id="cacheLogger" class="utils.CacheFileEventLogger" destroy-method="destroy"/>

    <bean id="event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg ref="dateFormat"/>
    </bean>

    <bean id="dateFormat" class="java.text.DateFormat" factory-method = "getDateTimeInstance"/>

</beans>