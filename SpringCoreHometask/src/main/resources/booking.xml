<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="bookingService" class="com.epam.spring.core.service.impl.BookingServiceImpl">
        <constructor-arg ref="ticketRepository"/>
        <property name="discountService" ref="discountService"/>
    </bean>

    <bean name="discountService" class="com.epam.spring.core.service.impl.DiscountServiceImpl"/>

    <bean id="ticketRepository" class="com.epam.spring.core.repository.TicketRepository"/>

</beans>